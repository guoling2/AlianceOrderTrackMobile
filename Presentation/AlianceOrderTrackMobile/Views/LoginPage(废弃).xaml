<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlianceOrderTrackMobile.Page.LoginPage">
    
    <ContentPage.Content>
        <FlexLayout StyleClass="body" x:Name="Form">
            <FlexLayout x:Name="LoginForm" StyleClass="container">
                <Label Text="川大移动(场站版)" StyleClass="logo"/>
                <FlexLayout StyleClass="login-form">
                    <Entry Placeholder="账号" />
                    <Entry Placeholder="密码" />
                    <Button Text="登陆" />       
                </FlexLayout>
            </FlexLayout>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>